<%- include("partials/Nav") -%>


<div class="container" style="margin-top: 30px;">
    <div class="row" style="width: 100%; margin-bottom: 40px;">
        <form  method="POST" action="/meds/search" class="col s12 m8 offset-m2" id="search_box">
            <input id="icon_prefix med-search" type="text" class="validate white" style="margin:0; font-size: 19px; padding-left: 18px; height: 60px; border: none;" placeholder="Search medicine by name" name="name">
            <button type="submit" class="btn btn-large waves-effect waves-light red lighten-1"  style="height: 60px;">
            <i class="material-icons">search</i>
            </button>
        </form>
    </div>    
</div>

<% if(!med){ %>
    <%- include('partials/NotFound') -%>
<% }else{ %>
    <div class="container" style="display: flex;flex-direction: column;
    justify-content: center;align-items: center;
    margin-top: 50px;">
        <ul class="collection with-header" style="min-width: 300px;">
            <li class="collection-header"><h4 style="font-weight: 500;color: #444;"><%= med.name %> </h4></li>
            <li class="collection-item"><span>PRICE :</span> <%= med.price %> </li>
            <li class="collection-item"><span> GROUP:</span> <%= med.groupName %> </li>
            <li class="collection-item"><span>Company:</span>  <%= med.company %> </li>
            <li class="collection-item"><span>Description: </span> <%= med.desc %> </li>
        </ul>
    </div>
<% } %>