<!DOCTYPE html>
<html>
  <head>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,700,900,900i&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Fredoka+One&display=swap" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="/materialize/css/materialize.min.css"  media="screen,projection"/>

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    <link rel="stylesheet" href="/css/styles.css">
  </head>

  <body>
    <main>

    <nav>
    <div class="nav-wrapper">
      <div class="container">
        <a href="/" class="brand-logo">FINDMED</a>
        <a href="#" class="sidenav-trigger .hide-on-large-only	" data-target="mobile-link"><i class="material-icons">menu</i></a>
        <ul class="right hide-on-med-and-down">
          <li><a href="/meds/page/1">All Meds</a></li>
          <li><a href="/tips/page/1"> Tips</a></li>
          <!-- checking for logged in user -->
          <% if(!locals.user){ %>
            <li><a href="/auth/login">Sign In</a></li>
            <li><a href="/auth/signup">Sign Up</a></li>
            <!-- if user found render this-->
            <% }else{ %>
              <li><a href="/tips/add">Add Tips</a></li>
              <% if(locals.user.isAdmin){ %>
                <li><a href="/meds/add">Add Medicine</a></li>
                <li><a href="/admin/dashboard">Dashboard</a></li>
              <% } %>
              <li><a href="/auth/logout">Logout</a></li>
            <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <ul class="sidenav" id="mobile-link">
    <li><a href="/meds/page/1">All Meds</a></li>
    <li><a href="/tips/page/1"> Tips</a></li>
    <!-- checking for logged in user -->
    <% if(!locals.user){ %>
      <li><a href="/auth/login">Sign In</a></li>
      <li><a href="/auth/signup">Sign Up</a></li>
      <!-- if user found render this-->
      <% }else{ %>
        <li><a href="#">Add Tips</a></li>
        <% if(locals.user.isAdmin){ %>
          <li><a href="/meds/add">Add Medicine</a></li>
          <li><a href="/admin/dashboard">Dashboard</a></li>
        <% } %>
        <li><a href="/auth/logout">Logout</a></li>
      <% } %>
  </ul>



  <script
  src="https://code.jquery.com/jquery-3.4.1.min.js"
  integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
  crossorigin="anonymous"></script>

  <!--JavaScript at eSnd of body for optimized loading-->
  <script type="text/javascript" src="/materialize/js/materialize.min.js"  media="screen,projection"></script>

  <script type="text/javascript">
    $(document).ready(function(){
      $('.sidenav').sidenav()
      // modal
      $('.modal').modal();
    })
  </script>
